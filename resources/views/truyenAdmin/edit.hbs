<div class="mt-4">
  <h3>Cập nhật truyện</h3>

  <form
    class="mt-4"
    method="POST"
    action="/truyenAdmin/{{truyen._id}}?_method=PUT"
  >
    <div class="form-group">
      <label for="TenTruyen">Tên Truyện</label>
      <input
        type="Text"
        name="TenTruyen"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        placeholder="Nhập tên tác giả..."
        value="{{truyen.TenTruyen}}"
      />
    </div>
    <div class="form-group">
      <label for="TheLoais">Thể loại</label>
      <input
        type="Text"
        name="TheLoais"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        placeholder="Nhập tên thể loại"
        value="{{truyen.TheLoais}}"
      />
    </div>

    <div class="form-group">
      <label for="TacGias">Nhập tác giả</label>
      <input
        type="Text"
        name="TacGias"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        placeholder="Nhập tên tác giả..."
        value="{{truyen.TacGias}}"
      />
    </div>
    <div class="form-group">
      <label for="GioiThieu">Nhập Giới Thiệu</label>
      <textarea
        name="GioiThieu"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        placeholder="Nhập tên tác giả..."
      >{{truyen.GioiThieu}}</textarea>
    </div>
    <div class="form-group">
      <label for="AnhBia">Ảnh Bìa</label>
      <input
        type="Text"
        name="AnhBia"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        placeholder="Nhập tên tác giả..."
        value="{{truyen.AnhBia}}"
      />
    </div>
    <button type="submit" class="btn btn-primary">Lưu Truyện</button>
  </form>
</div>