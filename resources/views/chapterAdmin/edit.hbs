<style type="text/css">
  input[name=Truyen] { pointer-events: none; }
</style>

<div class="mt-4">
  <h3>Cập nhật Chapter</h3>

  <form
    class="mt-4"
    method="POST"
    action="/chapterAdmin/{{chapter._id}}?_method=PUT"
  >
    <div class="form-group">
      <label for="TenChapTer">Tên chapter</label>
      <input
        type="Text"
        name="TenChapter"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        placeholder="Nhập tên tác giả..."
        value="{{chapter.TenChapter}}"
      />
      <label for="Truyen">Thêm vào truyện</label>
      <input
        type="Text"
        name="Truyen"
        class="form-control"
        aria-describedby="emailHelp"
        placeholder="Nhập tên chapter"
        value="{{chapter.Truyen}}"
      />
      <label for="LinkAnhs">Link ảnh</label>
      <textarea
        name="LinkAnhs"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        placeholder="Nhập tên tác giả..."
      >{{chapter.LinkAnhs}}</textarea>
      <input
        type="radio"
        id="btnTrue"
        name="TrangThai"
        value="true"
        checked="true"
      />

      <label for="TrangThai">TRUE</label><br />
      <input type="radio" id="btnfalse" name="TrangThai" value="false" />
      <label for="TrangThai"> FALSE</label><br />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
  </form>
</div>