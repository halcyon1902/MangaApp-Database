<style type='text/css'>
  input[name=Truyen] {
    pointer-events: none;
  }
</style>

<div class='mt-4'>
  <h3>
    Thêm chapter
  </h3>
  <form method='POST' action='/chapterAdmin/store'>
    <div class='form-group'>
      <label for='TenChapTer'>
        Tên chapter
      </label>
      <input type='Text' name='TenChapter' class='form-control' id='exampleInputEmail1' aria-describedby='emailHelp'
        placeholder='Nhập Ten Chapter...' />
      <label for='Truyen'>
        Thêm vào truyện
      </label>
      <input type='Text' name='Truyen' class='form-control' aria-describedby='emailHelp' placeholder='Nhập tên chapter'
        value="{{truyenID}}" />

      <label for='LinkAnhs'>
        Link ảnh
      </label>
      <textarea name='LinkAnhs' class='form-control' id='exampleInputEmail1' aria-describedby='emailHelp'
        placeholder='Nhập tat ca link anh...'></textarea>
    </div>
    <button type='submit' class='btn btn-primary'>
      Thêm chapter
    </button>
  </form>
</div>