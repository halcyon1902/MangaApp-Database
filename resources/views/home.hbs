<div class='mt-4'>
  <div class='row'>
    {{#each truyens}}
      <div class='col-sm-6 col-lg-4'>
        <div class='card card-truyen-item'>
          <img
            class='card-img-top'
            style='height: 492px;'
            src="{{this.AnhBia}}"
            alt="{{this.TenTruyen}}"
          />
          <div class='card-body'>
            <h5 class='card-title'>
              {{this.TenTruyen}}
            </h5>
            <p
              class='card-text'
              style='overflow: hidden;
                text-overflow: ellipsis;
                -webkit-line-clamp: 3;
                display: -webkit-box;
                -webkit-box-orient: vertical;'
            >
              {{this.GioiThieu}}
            </p>
            <a href='#' class='btn btn-primary'>
              Xem chi tiet
            </a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>