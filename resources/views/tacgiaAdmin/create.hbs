<div class="mt-4">
  <h3>Thêm tác giả</h3>

  <form method="POST" action="/tacgiaAdmin/store">
    <div class="form-group">
      <label for="TenTacGia">Tên Tác Giả</label>
      <input type="Text" name="TenTacGia" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
        placeholder="Nhập tên tác giả..." />
    </div>

    <input type="radio" name="TrangThai" value="true" checked="true" />
    <label for="TrangThai">TRUE</label><br />
    <input type="radio" name="TrangThai" value="false" />
    <label for="TrangThai"> FALSE</label><br />
    <button type="submit" class="btn btn-primary">Thêm Tác Giả</button>
  </form>
</div>